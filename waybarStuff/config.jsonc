// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    //"height": 40, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules


    // LEFT SIDE
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "mpris"
    ],

    // MIDDLE
    "modules-center": [
        "clock",
        "custom/weather"
    ],

    // RIGHT SIDE
    "modules-right": [
        "wireplumber",
        "bluetooth",
        "hyprland/language",
        "keyboard-state",
        "cpu",
        "memory",
        "tray"
    ],

    // MODULES

    "custom/launcher":{
        "format": "ÔåÉ ",
        "on-click": "rofi -show drun",
        "on-click-right": "killall rofi"
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format":"{name}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": 3,
            "HDMI-A-2": 1
        }
    },

    "mpris": {
        "format": "ÔÄÅ  {status_icon} {dynamic}",
            "interval": 1,
            "dynamic-len": 60,
        "status-icons": {
            "playing": "‚ñ∂",
            "paused": "‚è∏",
            "stopped": "ÔÅç"
        },
        "dynamic-order": ["artist", "title"]
    },

    "clock": {
        "timezone": "Europe/Warsaw",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a, %d %b, %H:%M}",
        "interval": 1
    },

    "custom/weather": {
        "exec": "/home/michoto/.config/waybarStuff/scripts/weather.sh",
        "interval": 600, // aktualizacja co 10 min
        "return-type": "string",
        "on-click": "xdg-open 'https://www.accuweather.com/pl/pl/gda%C5%84sk/275174/weather-forecast/275174'"
    },

    "wireplumber": {
        "scroll-step": 5, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}% Ôäî",
        "format-bluetooth-muted": "Ôö© {icon} Ôäî",
        "format-muted": "Ôö©",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    "bluetooth": {
        "format": "Û∞Ç≤",
        "format-on": "{icon}",
        "format-off": "{icon}", 
        "format-connected":"{icon}",
        "format-icons":{
            "on":"Û∞ÇØ",
            "off": "Û∞Ç≤",
            "connected": "Û∞Ç±"
            },
        "on-click": "blueman-manager",
        "tooltip-format-connected":"{device_enumerate}"
    },

    "hyprland/language": {
        "format": "{} üñÆ",
        "min-length": 5,
        "tooltip": false
    },

    "keyboard-state": {
        //"numlock": true,
        "capslock": true,
        "format": "{name} {icon} ",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú "
        }
    },

    "cpu": {
        "format": "{usage}% Ôãõ ",
        "tooltip": true
    },

    "memory": {
        "format": "{}% ÔÉâ"
    },

    "tray": {
        // "icon-size": 21,
        "spacing": 10
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    }
}
